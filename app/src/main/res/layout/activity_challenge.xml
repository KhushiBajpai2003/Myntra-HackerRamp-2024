<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/adBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ad_banner" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/adBanner"
        android:layout_above="@id/footer"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Vintage CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/vintage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vintage Revival"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinevintage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Time Capsule Couture: Decades of Style Revived!"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageVintage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vintage" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Street Style CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/streetstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fusion Fiesta"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinestreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Celebrate Heritage with a Modern Flair!"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageStreet"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fusion" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cosplay CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/cosplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cosplay"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinecosplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Transforming Imagination into Reality!"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageCosplay"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cosplay" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_text"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <!-- Replace these ImageViews with your actual icons -->
        <ImageView
            android:id = "@+id/home"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/myntra" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/fwd" />

        <ImageView
            android:id="@+id/target"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/target" />

        <ImageView
            android:id="@+id/flash"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/flash" />

        <ImageView
            android:id="@+id/diamond"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/diamond" />

    </LinearLayout>

</RelativeLayout>
