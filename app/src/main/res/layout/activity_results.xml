<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".challenge">

    <!-- Ad Banner ImageView -->
    <ImageView
        android:id="@+id/adBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ad_banner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scoreboard Update!"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold" />

    <!-- ScrollView for card views -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adBanner"
        android:layout_above="@id/footer"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Linear Layout for CardViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Vintage CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/vintage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vintage Revival"
                        android:textColor="@android:color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinevintage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Time Capsule Couture: Decades of Style Revived!"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageVintage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vintage" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/vintageButton"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:text="Check here!"
                android:textSize="17sp"
                android:layout_below="@id/cardView"
                android:layout_alignEnd="@id/cardView" />

            <!-- Street Style CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/streetstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Street Style"
                        android:textColor="@android:color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinestreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Global Streets, Unique Beats"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageStreet"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/street_style" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/streetButton"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:text="To be announced!"
                android:textSize="17sp"
                android:layout_below="@id/cardView"
                android:layout_alignEnd="@id/cardView" />

            <!-- Cosplay CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#FADDD4"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/cosplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cosplay"
                        android:textColor="@android:color/black"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taglinecosplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Transforming Imagination into Reality!"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imageCosplay"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cosplay" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/cosplayButton"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button"
                android:text="To be announced!"
                android:textSize="17sp"
                android:layout_below="@id/cardView"
                android:layout_alignEnd="@id/cardView" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bordered_text"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Replace these ImageViews with your actual icons -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/myntra" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/fwd" />

        <ImageView
            android:id="@+id/target"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/target" />

        <ImageView
            android:id="@+id/flash"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/flash" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/diamond" />

    </LinearLayout>

</RelativeLayout>